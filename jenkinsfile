pipeline {
    agent any

    environment {
        BENCH_DIR = "/home/deepika/frappe-bench"
        APP_NAME = "deepika"
        SITE_NAME = "test.localhost"
        BENCH_CMD = "/home/deepika/.local/bin/bench"
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                sh '''
                echo "ğŸ”„ Pulling latest changes from Git..."
                sudo -u deepika bash -c "cd /home/deepika/frappe-bench/apps/deepika && git fetch origin && git reset --hard origin/main"
                '''
            }
        }

        stage('Build & Migrate') {
            steps {
                sh '''
                echo "âš™ï¸ Building assets and migrating database..."
                sudo -u deepika bash -c "cd /home/deepika/frappe-bench && ${BENCH_CMD} build && ${BENCH_CMD} --site test.localhost migrate"
                '''
            }
        }

        stage('Restart Bench') {
            steps {
                sh '''
                echo "ğŸ” Restarting Bench..."
                sudo -u deepika bash -c "cd /home/deepika/frappe-bench && ${BENCH_CMD} restart"
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment successful!"
        }
        failure {
            echo "âŒ Deployment failed. Check logs."
        }
    }
}

      
