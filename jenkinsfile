pipeline {
    agent any

    environment {
        BENCH_DIR = "/home/deepika/frappe-bench"  // Path to your existing bench
        SITE_NAME = "test.localhost"              // Your existing site
        PATH = "$HOME/.local/bin:$PATH"
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                sh '''
                echo "üîÑ Pulling latest changes from Git..."
                cd $BENCH_DIR/apps/your_app_name
                git pull origin main || git pull origin master
                '''
            }
        }

        stage('Build & Migrate') {
            steps {
                sh '''
                echo "‚öôÔ∏è Building and migrating..."
                export PATH=$HOME/.local/bin:$PATH
                cd $BENCH_DIR
                bench build
                bench --site $SITE_NAME migrate
                '''
            }
        }

        stage('Restart Bench') {
            steps {
                sh '''
                echo "üöÄ Restarting bench..."
                export PATH=$HOME/.local/bin:$PATH
                cd $BENCH_DIR
                bench restart
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Deployment successful!'
        }
        failure {
            echo '‚ùå Deployment failed! Check Jenkins logs.'
        }
    }
}

               
