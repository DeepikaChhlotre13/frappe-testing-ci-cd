pipeline {
    agent any

    environment {
        BENCH_DIR = "/home/deepika/frappe-bench"
        SITE_NAME = "new.local"
        BENCH_CMD = "/home/deepika/.local/bin/bench"
        PATH = "/usr/local/bin:${env.PATH}" // ensures yarn is found
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                sh '''
                echo "üîÑ Pulling latest changes from Git..."

                # Update frappe app (develop branch)
                sudo -u deepika bash -c "cd ${BENCH_DIR}/apps/frappe && git fetch upstream && git reset --hard upstream/develop && git checkout -B develop upstream/develop"

                # Re-clone ERPNext app (version-14 branch) to ensure requirements exist
                sudo -u deepika bash -c "cd ${BENCH_DIR}/apps && rm -rf erpnext && git clone -b version-14 https://github.com/frappe/erpnext.git erpnext"
                '''
            }
        }

        stage('Clean Assets & Cache (Optional)') {
            steps {
                sh '''
                echo "üßπ Cleaning old assets and cache..."
                sudo -u deepika bash -c "cd ${BENCH_DIR} && ${BENCH_CMD} build --ignore-python && rm -rf sites/assets"
                '''
            }
        }

        stage('Build & Migrate (Optional)') {
            steps {
                sh '''
                echo "‚öôÔ∏è Building assets and migrating database..."
                sudo -u deepika bash -c "cd ${BENCH_DIR} && ${BENCH_CMD} build --ignore-python"

                # Database migration will fail if Python dependencies missing,
                # you can uncomment the next line after fixing Python environment
                # sudo -u deepika bash -c '${BENCH_CMD} --site ${SITE_NAME} migrate'
                '''
            }
        }

        stage('Restart Bench') {
            steps {
                sh '''
                echo "üîÅ Restarting Bench..."
                sudo -u deepika bash -c "cd ${BENCH_DIR} && ${BENCH_CMD} restart"
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful!"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs."
        }
    }
}
