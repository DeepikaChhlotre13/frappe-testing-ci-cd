pipeline {
    agent any

    environment {
        BENCH_DIR = "/home/deepika/frappe-bench"
        APP_NAME = "deepika"
        SITE_NAME = "new.local"
        BENCH_CMD = "/home/deepika/.local/bin/bench"
        PATH = "/usr/local/bin:${env.PATH}" // ensure yarn is available
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                sh '''
                echo "üîÑ Pulling latest changes from Git..."
                sudo -u deepika bash -c "cd ${BENCH_DIR}/apps/${APP_NAME} && git fetch origin && git reset --hard origin/main"
                '''
            }
        }

        stage('Clean Assets & Cache (Optional)') {
            steps {
                sh '''
                echo "üßπ Cleaning old assets and cache..."
                sudo -u deepika bash -c "cd ${BENCH_DIR} && ${BENCH_CMD} --site ${SITE_NAME} clear-cache && rm -rf sites/assets"
                '''
            }
        }

        stage('Build & Migrate') {
            steps {
                sh '''
                echo "‚öôÔ∏è Building assets and migrating database..."
                sudo -u deepika bash -c "cd ${BENCH_DIR} && ${BENCH_CMD} build && ${BENCH_CMD} --site ${SITE_NAME} migrate"
                '''
            }
        }

        stage('Restart Bench') {
            steps {
                sh '''
                echo "üîÅ Restarting Bench..."
                sudo -u deepika bash -c "cd ${BENCH_DIR} && ${BENCH_CMD} restart"
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful!"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs."
        }
    }
}
