pipeline {
    agent any

    environment {
        BENCH_DIR = "/home/deepika/frappe-bench"
        APP_NAME = "deepika"
        SITE_NAME = "test.localhost"   // replace if your site name is different
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                sh '''
                echo "üîÑ Pulling latest changes from Git..."
                cd $BENCH_DIR/apps/$APP_NAME
                git pull origin main || git pull origin master
                '''
            }
        }

        stage('Build & Migrate') {
            steps {
                sh '''
                echo "‚öôÔ∏è Building assets and migrating database..."
                cd $BENCH_DIR
                bench build
                bench --site $SITE_NAME migrate
                '''
            }
        }

        stage('Restart Bench') {
            steps {
                sh '''
                echo "üîÅ Restarting Bench..."
                cd $BENCH_DIR
                bench restart
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful!"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs."
        }
    }
}

               
