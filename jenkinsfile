pipeline {
    agent any

    environment {
        BENCH_DIR = "/home/deepika/frappe-bench"
        APP_NAME = "deepika"
        SITE_NAME = "test.localhost"   // replace if your site name is different
    }

    stages {

        stage('Pull Latest Code') {
            steps {
                sh '''
                echo "ğŸ”„ Pulling latest changes from Git..."
                sudo -u deepika bash -c "cd /home/deepika/frappe-bench/apps/deepika && git pull origin main || git pull origin master"
                '''
            }
        }

        stage('Build & Migrate') {
            steps {
                sh '''
                echo "âš™ï¸ Building assets and migrating database..."
                sudo -u deepika bash -c "cd /home/deepika/frappe-bench && bench build && bench --site test.localhost migrate"
                '''
            }
        }

        stage('Restart Bench') {
            steps {
                sh '''
                echo "ğŸ” Restarting Bench..."
                sudo -u deepika bash -c "cd /home/deepika/frappe-bench && bench restart"
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment successful!"
        }
        failure {
            echo "âŒ Deployment failed. Check logs."
        }
    }
}

               
